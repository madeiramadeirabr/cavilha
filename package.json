{
  "name": "@madeiramadeira/cavilha",
  "version": "0.1.0",
  "description": "Cavilha is an UI KIT of components with MadeiraMadeira brand",
  "homepage": "https://github.com/madeiramadeirabr/cavilha#readme",
  "private": false,
  "style": "css/cavilha.css",
  "sass": "cavilha.sass",
  "scripts": {
    "fresh": "rm -rf node_modules && rm -rf packages-lock.json && npm install",
    "sass-build-autoprefix": "postcss --use=autoprefixer --map false --output css/cavilha.css css/cavilha.css",
    "sass-build-cleancss": "cleancss -o css/cavilha.min.css css/cavilha.css",
    "sass-build-clean": "rimraf css",
    "sass-build-sass": "node-sass --output-style expanded sass/index.sass css/cavilha.css",
    "dist": "npm run sass-build-clean && npm run sass-build-sass && npm run sass-build-autoprefix && npm run sass-build-cleancss",
    "start": "npm run sass-build-sass && npm run sass-build-sass -- --watch",
    "dev": "npm start",
    "linter": "sass-lint -c .sass-lint.yml 'sass/**/*.sass' -v -q"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "clean-css-cli": "^4.3.0",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "node-sass": "^4.13.1",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass-lint": "^1.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madeiramadeirabr/cavilha.git"
  },
  "keywords": [
    "sass",
    "css",
    "html",
    "ui"
  ],
  "author": "William Novak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madeiramadeirabr/cavilha/issues"
  },
  "files": [
    "css",
    "sass"
  ],
  "browserslist": [
    "last 2 versions",
    "Safari >= 10",
    "iOS >= 10",
    "not ie <= 10",
    "> 1%"
  ]
}
